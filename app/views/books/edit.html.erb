<div class="col-md-6 col-md-offset-3">

	<div class="edit-book-form">

		<h1>Edytuj przepis</h1>

		<%= simple_form_for @book, :html => { :multipart => true } do |f| %>
			<%= f.select :category_id, @categories %>
			<%= f.file_field :book_img %>
			<%= f.input :title, label: "Nazwa przepisu" %>
			<%= f.input :description, label: "Opis" %>
			<%= f.input :author, label: "Autor przepisu" %>
			<%= f.button :submit,'AKTUALIZUJ', :class => "Aktualizuj" %>
		<% end %>

	</div>

</div>